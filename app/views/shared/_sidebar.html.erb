<div id="sidebar-wrapper">
  <ul class="sidebar-nav">
    <li class="sidebar-brand">
        <h2>Filters</h2>
    </li>

    <div class="form-group" id='size-options'>
      <li>
        <%= label_tag :size, "Number of Employees" %>
      </li>
      <li>
        <%= check_box_tag :company_size %>
        <%= h "At most X employees" %>
      </li>
      <li>
        <%= select_tag :sizes, options_for_select(company_size_filter), class: "dropdown", style: "display:none" %>
      </li>
    </div>

    <div class="form-group" id='within-distance'>
      <li>
        <%= label_tag :within_distance, "Distance by Zip" %>
      </li>

      <li>
        <%= check_box_tag :companies_within %>
        <%= h "Companies Within X miles" %>
      </li>

      <li id='zip' style='display:none'>
        <%= select_tag :distance_select, options_for_select(['10', '20', '30', '50', '100']), class: 'dropdown' %>
        <%= text_field_tag :zip_input, nil, placeholder: 'zip', size: '6' %>
        <button id='filter-by-zip'>Go</button>
      </li>
    </div>

    <div class="form-group" id='industry-options'>
      <li>
        <%= label_tag :industry %>
      </li>
      <% @industries.each do |industry| %>
        <li>
          <%= check_box_tag 'industry_ids[]', industry.name -%>
          <%= h industry.name -%>
        </li>
      <% end %>
    </div>
  </ul>
</div>
