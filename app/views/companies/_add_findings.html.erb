<div class="add-findings panel panel-default">
  <div class="panel-heading">
    <h3 class='text-center'>Findings</h3>
  </div>
  <div class="panel-body">
    <% if !@company.findings.empty? %>

      <table id="findings-table" class="table">
        <thead>
          <th>Viability</th>
          <th>Hiring?</th>
          <th>Technologies</th>
        </thead>
        <tbody>
        <% @company.findings.each do |finding| %>
          <tr>
            <td><%= finding.viability %></td>
            <td><%= finding.hiring %></td>
            <td><%= finding.tech_list %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
  <div class="panel-footer">
    <h4>Add Findings</h4>
    <%= form_for @finding do |f| %>
      <p id="viability">
        <%= f.label :viability %>
        <%= f.select(:viability, options_for_select(1..5), include_blank: true) %>
      </p>
      <p id="hiring">
        <%= f.label :hiring, "Hiring?" %>
        <%= f.check_box(:hiring) %>
      </p>
      <p id="technology-tokens">
        <%= f.label :technology_tokens, "Technologies" %>
        <%= f.text_field :technology_tokens %>
      </p>
        <%= f.hidden_field :company_id, value: @company.id %>
      <div>
        <%= f.submit "Submit findings", class:"btn btn-default"%>
      </div>
    <% end %>
  </div>

</div>
